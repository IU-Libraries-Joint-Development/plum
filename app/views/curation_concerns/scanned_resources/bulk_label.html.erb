<h1><%= t("headers.bulk_label") %></h1>
<%= link_to "Back to Parent", polymorphic_path([main_app, :curation_concerns, @presenter]) %>
<div data-action="bulk-label">
  <%= render "bulk_label_actions" %>
  <ul class="col-xs-8">
    <% @members.each do |member| %>
      <li class="row">
        <div class="col-xs-3 text-center">
          <%= render_thumbnail_tag member %>
        </div>
        <div class="col-xs-9">
          <%= simple_form_for [main_app, :curation_concerns, member], remote: true do |f| %>
            <%= f.input :title, as: :string, input_html: { name: "file_set[title][]" }, value: member.to_s %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
