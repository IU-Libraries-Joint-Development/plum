<%= bulk_edit_page_header %>
<div class="flash-message">
  <div class="container">
    <div class="col-md-12">
      <div class="alert alert-success ui-corner-all alert-dismissable hidden" data-reorder-action="flash">
        <a class="close" href="#">Ã—</a>
        <span class="text">
        </span>
      </div>
    </div>
  </div>
</div>

<div class="col-md-12">
  <h2>Attach Files</h2>
  <%= render 'multiple_upload', presenter: @presenter %>
  <%= render "server_upload" %>
</div>

<div data-action="bulk-label">
    <div class="col-md-3">
      <h2>Label & Order</h2>
      <%= render "bulk_edit_actions" %>
      <%= render "iiif_fields" %>
    </div>
    <div class="col-md-9" id="order-grid">
      <div class="btn-group" role="group" data-action="list-toggle">
        <button type="button" class="btn btn-default list" aria-label="List">
          <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-default active grid" aria-label="Grid">
          <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
        </button>
      </div>
      <ul id="sortable" data-id="<%= @presenter.id %>" class="list-unstyled grid">
        <% @members.each do |member| %>
          <%= render "bulk_edit_member", node: member %>
        <% end %>
      </ul>
    </div>
</div>
